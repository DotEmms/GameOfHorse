<Page x:Class="GameOfGoose.VictoryScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:GameOfGoose"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="800"
      Title="VictoryScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Pages/victory.jpg" />
        </Grid.Background>
        <Grid.Resources>
            <local:Game x:Key="Winner" />
        </Grid.Resources>
        <!-- Row 0 -->
        <Label Grid.Column="1"
               Content="Victory!"
               Style="{StaticResource Victory}"
               FontFamily="Goudy Old Style"
               FontSize="45" />
        
        <Image x:Name="imgWinner"
               Height="150"
               Width="150" 
               Grid.Row="1"
               Grid.Column="1"/>
        
        <!-- Row 1 -->
        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Margin="10">
            <Label Content="Winning player: "
                       Style="{StaticResource playerselectionLabels}"
                       FontFamily="Goudy Old Style"
                       FontSize="30" />
            <Label x:Name="lblWinner"
                       HorizontalAlignment="Right"
                       Style="{StaticResource playerselectionLabels}"
                       FontFamily="Goudy Old Style"
                       FontSize="30" />
            </StackPanel>

        <!-- Row 2 -->
            <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Bottom"
                    Margin="10">
                <Label Content="Amount of turns: "
                   Style="{StaticResource playerselectionLabels}"
                   FontFamily="Goudy Old Style"
                   FontSize="30" />
                <Label x:Name="lblAmountOfRounds"
                   Style="{StaticResource playerselectionLabels}"
                   HorizontalAlignment="Right"
                   FontFamily="Goudy Old Style"
                   FontSize="30" />
            </StackPanel>
    </Grid>
</Page>